{
    "name": "silver-bullet-cookbook",
    "#{version}#": "#{versionNumber}#",
    "repository": "https://github.com/samjavner/silver-bullet-cookbook",
    "author": "Sam Javner <samuel.javner@gmail.com>",
    "license": "MIT",
    "scripts": {
        "start": "electron-webpack dev",
        "test": "jest --watch",
        "build": "yarn run build:lint && yarn run build:test && yarn run build:webpack && yarn run build:electron",
        "build:lint": "yarn run build:tslint && yarn run build:stylelint",
        "build:tslint": "tslint --config tslint.json --project tsconfig.json",
        "build:stylelint": "stylelint \"src/**/*.scss\"",
        "build:test": "jest --ci --reporters=jest-junit",
        "build:webpack": "electron-webpack",
        "build:electron": "electron-builder --publish=never",
        "postinstall": "electron-builder install-app-deps",
        "precommit": "lint-staged"
    },
    "devDependencies": {
        "@types/adm-zip": "^0.4.32",
        "@types/classnames": "^2.2.8",
        "@types/electron-devtools-installer": "^2.2.0",
        "@types/jest": "^24.0.13",
        "@types/react": "^16.8.19",
        "@types/react-dom": "^16.8.4",
        "@types/react-hot-loader": "^4.1.0",
        "@types/react-select": "^2.0.19",
        "@types/react-test-renderer": "^16.8.1",
        "@types/react-virtualized": "^9.21.2",
        "@types/uuid": "^3.4.4",
        "@types/webpack-env": "^1.13.9",
        "@types/xml2js": "^0.4.4",
        "electron": "^18.3.7",
        "electron-builder": "^20.41.0",
        "electron-webpack": "^2.6.2",
        "electron-webpack-ts": "^3.2.0",
        "husky": "^2.3.0",
        "jest": "^24.8.0",
        "jest-junit": "^6.4.0",
        "lint-staged": "^8.1.7",
        "node-sass": "^4.12.0",
        "prettier": "^1.17.1",
        "react-hooks-testing-library": "^0.5.1",
        "react-test-renderer": "^16.8.6",
        "sass-loader": "^7.1.0",
        "stylelint": "^10.0.1",
        "stylelint-config-prettier": "^5.2.0",
        "stylelint-config-standard": "^18.3.0",
        "stylelint-scss": "^3.8.0",
        "stylelint-webpack-plugin": "^0.10.5",
        "ts-jest": "^24.0.2",
        "tslint": "^5.17.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-loader": "^3.5.4",
        "tslint-react": "^4.0.0",
        "typescript": "^3.5.1",
        "webpack": "^4.32.2"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.18",
        "@fortawesome/free-solid-svg-icons": "^5.8.2",
        "@fortawesome/react-fontawesome": "^0.1.4",
        "adm-zip": "^0.4.13",
        "bulma": "^0.7.5",
        "classnames": "^2.2.6",
        "electron-devtools-installer": "^2.2.4",
        "iconv-lite": "^0.4.24",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-hot-loader": "^4.9.0",
        "react-select": "^2.4.4",
        "react-virtualized": "^9.21.1",
        "source-map-support": "^0.5.12",
        "sql-template-strings": "^2.2.2",
        "sqlite": "^3.0.3",
        "uuid": "^3.3.2",
        "xml2js": "^0.4.19"
    },
    "electronWebpack": {
        "main": {
            "webpackConfig": "webpack.main.additions.js"
        },
        "renderer": {
            "webpackConfig": "webpack.renderer.additions.js"
        },
        "title": "Silver Bullet Cookbook"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "moduleNameMapper": {
            "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
        },
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.jest.json"
            }
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
        "roots": [
            "<rootDir>/src"
        ],
        "testURL": "http://localhost"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tslint --fix",
            "prettier --write",
            "git add"
        ],
        "*.scss": [
            "stylelint --fix",
            "prettier --write",
            "git add"
        ],
        "*.{js,json,md,yml,yaml}": [
            "prettier --write",
            "git add"
        ]
    }
}
